pipeline {
    agent none
    stages {
stage('Set Up Python virtual  environment') {
            agent {
                docker {
                    image 'django'
                }
            }
            steps {
                sh 'source educationweb/env/bin/activate'
            }
            
        }

        stage('Test') {
            agent {
                docker {
                    image 'django'
                }
            }
            steps {
                sh 'python educationweb/manage.py test'
            }
        }
    }
}